                <tr>
                    <td align="left" colspan="4" style="vertical-align: top;">
                        @{
                            // From Bill Transfer
                            var findBillTransfer = (from n in db.HmlRegistrationDbSet
                                                    where n.COMPID == companyId && n.ROOMNOL == roomNO && n.REGNIDL == registrationID
