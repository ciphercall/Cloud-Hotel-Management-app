                                                                         where HML_REGN.COMPID == companyId && HML_REGN.REGNID == get.REGNID && HML_GUESTS.REGNID == HML_REGN.REGNID
                                                                         select new { HML_GUESTS.GUESTNM }).ToList();
                                        foreach (var x in findBillTransferGuestName)
                                        {
